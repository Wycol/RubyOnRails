<h1>INDEX</h1>
<%= link_to "Crear un nuevo todo", new_todo_path%>
<table>
 <tr>
  <th>Name</th>
  <th>Description</th>
 </tr>
 <% @todos.each do |todo| %>
    <tr>
     <td> <%= todo.name %> </td>
     <td> <%= todo.description %> </td>
     <td> <%= link_to "Edit",edit_todo_path(todo) %> </td>
     <td> <%= link_to "Show",todo_path(todo) %> </td>
    </tr>
 <% end %>

</table>